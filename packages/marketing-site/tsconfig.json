{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": true
  },
  "exclude": [".next", ".vercel", "node_modules"],
  "include": [
    "src",
    "next-env.d.ts",
    "eslint.base.js",
    "eslint.next.js",
    "eslint.react.js",
    "*.ts",
    "*.mjs",
    ".next/types/**/*.ts",
    "*.config.tsx",
    "theme.tsx"
  ]
}
